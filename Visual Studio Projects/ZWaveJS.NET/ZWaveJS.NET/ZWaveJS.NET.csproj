<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net45;netstandard2.0</TargetFrameworks>
    <Version>3.0.0-alpha.2</Version>
    <Authors>Marcus Davies</Authors>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Company>ZWave JS</Company>
    <Description>ZWaveJS.NET is a class library developed in .NET Standard 2.0, that exposes the zwave-js Driver in .NET, opening up the ability to use its runtime directly in .NET applications.</Description>
    <PackageProjectUrl>https://github.com/zwave-js/ZWaveJS.NET</PackageProjectUrl>
    <RepositoryUrl>https://github.com/zwave-js/ZWaveJS.NET</RepositoryUrl>
    <Copyright>Copyright Â© Marcus Davies 2022</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>Logo.png</PackageIcon>
    <PackageIconUrl />
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\Logo.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
